#include <iostream>

using namespace std;

int main()
{
    int pem,pen,hsl;
    cout << "                Mengubah Bilangan Pecahan - Bilangan Bulat" << endl << endl;
    cout << "Masukan pembilang  : "; cin >> pem;
    cout << "Masukan penyebut   : "; cin >> pen;
    cout << endl;
    cout << "Bentuk bilangan bulat dari ";
    cout << pem;
    cout <<"/";
    cout << pen;
    cout << " adalah ";
    hsl = pem/pen;
    cout << hsl;

    cin.get ();
    return 0;
}
